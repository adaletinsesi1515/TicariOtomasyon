@using MVCOnlineOtomasyon.Models.Sınıflar;
@model List<Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.KategoriID</td>
            <td>@k.KategoriAd</td>
            <td><a href="#" class="btn btn-warning btn-sm">Sil</a></td>
            <td><a href="#" class="btn btn-danger btn-sm">Düzenle</a></td>
        </tr>
    }
</table>

<button class="btn btn-primary">Yeni Kategori Ekle</button>

